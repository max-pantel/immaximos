        <iframe class="lightbox-iframe" id="lightboxIframe" src="" allowfullscreen></iframe>
      </div>
    </div>
    
    <script>
      // Image swap on hover for video items
      document.querySelectorAll('.video-item').forEach(item => {
        const imgElement = item.querySelector('img') as HTMLImageElement | null;
        const hoverImg = item.dataset.hoverImg;
        
        if (imgElement && hoverImg) {
          const originalSrc = imgElement.src;
          
          item.addEventListener('mouseenter', () => {
            imgElement.src = hoverImg;
          });
          
          item.addEventListener('mouseleave', () => {
            imgElement.src = originalSrc;
          });
        }
      });
      
      // Lightbox functionality (keep existing code)
      document.querySelectorAll('.video-item').forEach(item => {
        item.addEventListener('click', (e) => {
          const target = item as HTMLElement;
          const videoType = target.dataset.videoType;
          const videoId = target.dataset.videoId;
          
          if (!videoType || !videoId) return;
          
          const lightbox = document.getElementById('lightbox') as HTMLElement;
          const lightboxIframe = document.getElementById('lightboxIframe') as HTMLIFrameElement;
          
          let embedUrl = '';
          if (videoType === 'youtube') {
            embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
          } else if (videoType === 'vimeo') {
            embedUrl = `https://player.vimeo.com/video/${videoId}?autoplay=1`;
          }
          
          lightboxIframe.src = embedUrl;
          lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });
      
      // Close lightbox
      function closeLightbox() {
        const lightbox = document.getElementById('lightbox') as HTMLElement;
        const lightboxIframe = document.getElementById('lightboxIframe') as HTMLIFrameElement;
        
        lightbox.classList.remove('active');
        lightboxIframe.src = '';
        document.body.style.overflow = 'auto';
      }
      
      const lightboxClose = document.getElementById('lightboxClose');
      if (lightboxClose) {
        lightboxClose.addEventListener('click', closeLightbox);
      }
      
      const lightbox = document.getElementById('lightbox');
      if (lightbox) {
        lightbox.addEventListener('click', (e) => {
          if (e.target === lightbox) {
            closeLightbox();
          }
        });
      }
      
      // ESC key to close lightbox
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          closeLightbox();
        }
      });
    </script>
