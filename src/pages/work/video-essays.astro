---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Essays - maximos 'halbert' pantelidakis</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'PF Videotext Regular', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
        background: #0a0a0a;
        color: #fff;
        line-height: 1.6;
      }
      
      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 40px;
      }
      
      /* Header */
      header {
        padding: 40px 0;
        border-bottom: 1px solid #333;
      }
      
      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      .back-link {
        color: #ccc;
        text-decoration: none;
        font-size: 16px;
        transition: color 0.3s;
      }
      
      .back-link:hover {
        color: #fff;
      }
      
      .logo {
        font-size: 18px;
        font-weight: 400;
        text-decoration: none;
        color: #fff;
      }
      
      /* Page Title */
      .page-header {
        padding: 60px 0 40px 0;
        text-align: center;
      }
      
      .page-header h1 {
        font-size: clamp(32px, 5vw, 48px);
        font-weight: 300;
        margin-bottom: 15px;
      }
      
      .page-header p {
        font-size: 18px;
        color: #999;
        max-width: 700px;
        margin: 0 auto;
      }
      
      /* Video Grid */
      .video-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0;
        margin: 60px 0 80px 0;
        padding: 0 80px; /* Add padding to prevent overflow */
      }
      
      .video-item {
        position: relative;
        overflow: hidden;
        display: block;
        background: #111;
        text-decoration: none;
        color: inherit;
        aspect-ratio: 16/9;
        cursor: pointer;
        transition: transform 0.4s ease, z-index 0s 0.4s, box-shadow 0.4s ease;
        z-index: 1;
      }
      
      .video-item:hover {
        transform: scale(1.15);
        z-index: 10;
        transition: transform 0.4s ease, z-index 0s 0s, box-shadow 0.4s ease;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
      }
      
      .video-item img,
      .video-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: opacity 0.3s ease;
      }
      
      /* Hide video by default, show on hover */
      .video-item video {
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        pointer-events: none;
      }
      
      .video-item:hover video {
        opacity: 1;
      }
      
      .video-item:hover img {
        opacity: 0;
      }
      
      .video-item-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: left;
        color: #fff;
        opacity: 0;
        transition: opacity 0.3s ease;
        padding: 30px 20px 20px 20px;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.7) 50%, rgba(0, 0, 0, 0) 100%);
      }
      
      .video-item:hover .video-item-content {
        opacity: 1;
      }
      
      .video-item h3 {
        font-size: 16px;
        margin-bottom: 4px;
        font-weight: 400;
        line-height: 1.3;
      }
      
      .video-item h4 {
        font-size: 13px;
        margin-bottom: 8px;
        font-weight: 300;
        color: #ccc;
      }
      
      .video-item p {
        color: #aaa;
        font-size: 12px;
        line-height: 1.4;
      }
      
      .play-overlay {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        border: 2px solid rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
      }
      
      .video-item:hover .play-overlay {
        opacity: 1;
      }
      
      .play-overlay svg {
        margin-left: 4px;
        filter: none;
      }
      
      /* Separator */
      .grid-separator {
        grid-column: 1 / -1;
        text-align: center;
        padding: 20px;
        background: #111;
        color: #666;
        font-size: 14px;
      }
      
      /* Lightbox Modal */
      .lightbox-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.95);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
      }
      
      .lightbox-overlay.active {
        opacity: 1;
        visibility: visible;
      }
      
      .lightbox-content {
        position: relative;
        width: 90%;
        max-width: 1200px;
        aspect-ratio: 16/9;
        background: #000;
        border-radius: 8px;
        overflow: hidden;
        transform: scale(0.8);
        transition: transform 0.3s ease;
      }
      
      .lightbox-overlay.active .lightbox-content {
        transform: scale(1);
      }
      
      .lightbox-iframe {
        width: 100%;
        height: 100%;
        border: none;
      }
      
      .lightbox-close {
        position: absolute;
        top: -50px;
        right: 0;
        color: white;
        font-size: 40px;
        cursor: pointer;
        z-index: 10;
        background: none;
        border: none;
        padding: 10px;
        line-height: 1;
        transition: opacity 0.3s;
      }
      
      .lightbox-close:hover {
        opacity: 0.7;
      }
      
      footer {
        border-top: 1px solid #333;
        padding: 40px 0;
        text-align: center;
        color: #666;
      }
      
      @media (max-width: 768px) {
        .container {
          padding: 0 20px;
        }
        
        .video-grid {
          grid-template-columns: 1fr;
          gap: 0;
          padding: 0 20px; /* Less padding on mobile */
        }
        
        .video-item:hover {
          transform: scale(1.05);
        }
        
        .page-header {
          padding: 40px 0 30px 0;
        }
        
        .page-header h1 {
          font-size: 32px;
        }
        
        .page-header p {
          font-size: 16px;
        }
      }
      
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="header-content">
          <a href="/immaximos/" class="back-link">← Back to Home</a>
          <a href="/immaximos/" class="logo">maximos 'halbert' pantelidakis</a>
        </div>
      </header>
      
      <section class="page-header">
        <h1>Video Essays</h1>
        <p>Big ideas through the lens of pop culture.</p>
      </section>
    </div>
    
    <!-- Full-width grid (no container) -->
    <section class="video-grid">
    <!-- Separator -->
      <div class="grid-separator">
        <p>All thumbnails designed by Smaragda Pappa.</p>
      </div>
      <!-- Example Video 1 -->
      <div class="video-item" data-video-type="youtube" data-video-id="F0VqcVXbVq8" data-hover-video="../thumbnails/video-essays/riddler-loop.mp4">
        <img src="../thumbnails/video-essays/riddler-thumb.jpg" alt="Riddler vs Democracy">
        <video muted loop playsinline preload="none"></video>
        <div class="play-overlay">
          <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div class="video-item-content">
          <h3>"Riddler vs. Democracy"</h3>
          <h4>The Director's Cut</h4>
          <p>Riddler in The Batman (2022), parliamentary democracies and the increasing skepticism surrounding them. • 10:31</p>
        </div>
      </div>
      
      <!-- Example Video 2 -->
      <div class="video-item" data-video-type="youtube" data-video-id="0nLMT379xiY" data-hover-video="../thumbnails/video-essays/succession-loop.mp4">
        <img src="../thumbnails/video-essays/succession-thumb.jpg" alt="Succession vs Survivor">
        <video muted loop playsinline preload="none"></video>
        <div class="play-overlay">
          <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div class="video-item-content">
          <h3>"Succession: The Artistic Offspring of Survivor"</h3>
          <h4>The Director's Cut</h4>
          <p>Succession aesthetic nods to Dogme 95. Could this TV masterpiece be more akin to trash TV shows like "Survivor"? • 8:35</p>
        </div>
      </div>
      
      <!-- Example Video 3 -->
      <div class="video-item" data-video-type="youtube" data-video-id="Ie0dv0yz_Ow" data-hover-video="../thumbnails/video-essays/mi-loop.mp4">
        <img src="../thumbnails/video-essays/mi-thumb.jpg" alt="Mission: Impossible">
        <video muted loop playsinline preload="none"></video>
        <div class="play-overlay">
          <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div class="video-item-content">
          <h3>"Mission: Impossible at the Top of Action Cinema"</h3>
          <h4>The Director's Cut</h4>
          <p>Our mission: unlock the secrets of the scene that propelled Mission: Impossible to the top of the blockbuster movie charts. • 5:49</p>
        </div>
      </div>
      
      <!-- Example Video 4 -->
      <div class="video-item" data-video-type="youtube" data-video-id="Zg-prRa8ZP8" data-hover-video="../thumbnails/video-essays/spiderman-loop.mp4">
        <img src="../thumbnails/video-essays/spiderman-thumb.jpg" alt="Spider-Man Class Consciousness">
        <video muted loop playsinline preload="none"></video>
        <div class="play-overlay">
          <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div class="video-item-content">
          <h3>"Spider-Man: Are You -Still- Class Conscious?"</h3>
          <h4>The Director's Cut</h4>
          <p>Spider-Man's evolution from a working-class superhero next door to a timid servant of militaristic megalomaniacs. • 11:01</p>
        </div>
      </div>
      
      <!-- Separator -->
      <div class="grid-separator">
        <p>Not a video essay, but a collaboration with The Director's Cut channel.</p>
      </div>
      
      <!-- Example Video 5 -->
      <div class="video-item" data-video-type="youtube" data-video-id="0ZWLLC6BQuQ" data-hover-video="../thumbnails/video-essays/dogtooth-loop.mp4">
        <img src="../thumbnails/video-essays/dogtooth-thumb.jpg" alt="Misery">
        <video muted loop playsinline preload="none"></video>
        <div class="play-overlay">
          <svg width="24" height="24" fill="none" stroke="white" stroke-width="2" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
        <div class="video-item-content">
          <h3>"Dogtooth if it were Succession's Intro"</h3>
          <p>The story of a dysfunctional family that communicates in a comically strange way • 1:34</p>
        </div>
      </div>
    </section>
    
    <footer>
      <div class="container">
        <p>&copy; 2025 Maximos Pantelidakis. All rights reserved.</p>
      </div>
    </footer>
    
    <!-- Lightbox Modal -->
    <div class="lightbox-overlay" id="lightbox">
      <div class="lightbox-content">
        <button class="lightbox-close" id="lightboxClose">&times;</button>
        <iframe class="lightbox-iframe" id="lightboxIframe" src="" allowfullscreen></iframe>
      </div>
    </div>
    
    <script>
      // Video hover functionality with loop playback
      document.querySelectorAll('.video-item').forEach(item => {
        const videoElement = item.querySelector('video') as HTMLVideoElement;
        const hoverVideoSrc = item.dataset.hoverVideo;
        
        if (videoElement && hoverVideoSrc) {
          item.addEventListener('mouseenter', () => {
            if (!videoElement.src) {
              videoElement.src = hoverVideoSrc;
            }
            videoElement.play().catch(e => console.log('Video play failed:', e));
          });
          
          item.addEventListener('mouseleave', () => {
            videoElement.pause();
            videoElement.currentTime = 0;
          });
        }
      });
      
      // Lightbox functionality
      document.querySelectorAll('.video-item').forEach(item => {
        item.addEventListener('click', (e) => {
          const target = item as HTMLElement;
          const videoType = target.dataset.videoType;
          const videoId = target.dataset.videoId;
          
          if (!videoType || !videoId) return;
          
          const lightbox = document.getElementById('lightbox') as HTMLElement;
          const lightboxIframe = document.getElementById('lightboxIframe') as HTMLIFrameElement;
          
          let embedUrl = '';
          if (videoType === 'youtube') {
            embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
          } else if (videoType === 'vimeo') {
            embedUrl = `https://player.vimeo.com/video/${videoId}?autoplay=1`;
          }
          
          lightboxIframe.src = embedUrl;
          lightbox.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });
      
      // Close lightbox
      function closeLightbox() {
        const lightbox = document.getElementById('lightbox') as HTMLElement;
        const lightboxIframe = document.getElementById('lightboxIframe') as HTMLIFrameElement;
        
        lightbox.classList.remove('active');
        lightboxIframe.src = '';
        document.body.style.overflow = 'auto';
      }
      
      const lightboxClose = document.getElementById('lightboxClose');
      if (lightboxClose) {
        lightboxClose.addEventListener('click', closeLightbox);
      }
      
      const lightbox = document.getElementById('lightbox');
      if (lightbox) {
        lightbox.addEventListener('click', (e) => {
          if (e.target === lightbox) {
            closeLightbox();
          }
        });
      }
      
      // ESC key to close lightbox
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          closeLightbox();
        }
      });
    </script>
  </body>
</html>